<div class="container"  style="margin:50px auto" >
    <div class="row">
        <div class="col">
            <p class="text-end"> Hola {{usuario}} ! 
            <a href="/admin/login/logout" class="btn btn-sm btn-danger ">
            Cerrar sesi√≥n <i class=" fa fa-sign-out "></i></a></p>
        </div>
    </div>
    <div class="row">
        <div class="col-7">
            <h3> Listado de combos </h3>
        </div>
        <div class="text-end col-2"> 
            <a href="/admin/combos/agregar" class="btn btn-success"><i class="fa fa-plus">
            </i> Combos</a>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <table class="table">
             <thead class="thead-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col" class="text-center">Descripcion</th>
                    <th scope="col">imagen</th>
                    <th scope="col" class="text-end">Acciones</th>
                </tr>
             </thead>
             <tbody>
          {{#each combos}} 
                <tr>
                    <th scope="row">{{id}} </th>
                    <td>{{descripcion}}</td>
                    <td>{{{imagen}}}</td>
                    <td class="text-end">
                        <a href="/admin/combos/modificar/{{id}}" class="btn btn-sm btn-secondary">
                        <i class="fa fa-pencil"></i></a>
                        <a href="/admin/combos/eliminar/{{id}}" class="btn btn-sm btn-secondary">
                        <i class="fa fa-trash"></i></a>
                    </td>
                </tr>
          {{/each}}
             </tbody>
            </table>
        </div>
    </div>
</div>